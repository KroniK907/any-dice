{
  "extends": "plasmo/templates/tsconfig.base.json",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.svelte"
  ],
  "compilerOptions": {
    "paths": {
      "~*": [ "./*" ],
      "$lib": [ "./lib/"],
      "$lib/*": [ "./lib/*" ]
    },
    "baseUrl": "."
  }
}
